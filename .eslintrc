---
parser: babel-eslint
parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    arrowFunctions: true
    blockBindings: true
    classes: true
    defaultParams: true
    destructuring: true
    forOf: true
    generators: true
    jsx: true
    modules: true
    objectLiteralComputedProperties: true
    objectLiteralShorthandMethods: true
    objectLiteralShorthandProperties: true
    spread: true
    templateStrings: true

plugins:
  - import
  - compat

extends:
  - "plugin:import/errors"

env:
  node: true
  es6: true

globals:
  afterEach: true
  alert: true
  beforeEach: true
  Blob: true
  describe: true
  document: false
  expect: true
  fetch: true
  Headers: true
  it: true
  localStorage: true
  location: true
  navigator: true
  React: false
  Relay: false
  screen: true
  sessionStorage: true
  waffle: true
  WebSocket: true
  window: true
  xdescribe: true
  xit: true

rules:
  # ERRORS
  array-callback-return: 2
  brace-style: [2, 1tbs, allowSingleLine: true]
  # camelcase: [2, properties: never]
  comma-style: [2, last]
  compat/compat: 2
  complexity: [2, {max: 15}]
  curly: [2, all]
  eol-last: 2
  eqeqeq: 2
  guard-for-in: 2
  handle-callback-err: [2, error]
  import/no-absolute-path: 2
  import/extensions: [2, always, {js: never}]
  max-params: [2, 5]
  new-parens: 2
  no-array-constructor: 2
  no-caller: 2
  no-catch-shadow: 2
  no-cond-assign: 2
  no-constant-condition: 2
  no-delete-var: 2
  no-div-regex: 2
  no-dupe-args: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-empty-character-class: 2
  no-empty: 2
  no-eval: 2
  no-ex-assign: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-boolean-cast: 2
  no-extra-semi: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-func-assign: 2
  no-implicit-coercion: 2
  no-implied-eval: 2
  no-inner-declarations: [2, functions]
  no-invalid-regexp: 2
  no-irregular-whitespace: 2
  no-iterator: 2
  no-label-var: 2
  no-lonely-if: 2
  no-mixed-requires: [2, true]
  no-mixed-spaces-and-tabs: 2
  # no-multi-spaces: 2
  no-multi-str: 2
  no-negated-condition: 2
  no-negated-in-lhs: 2
  no-new-object: 2
  no-new-require: 2
  no-new-wrappers: 2
  no-new: 2
  no-obj-calls: 2
  no-octal-escape: 2
  no-octal: 2
  no-param-reassign: 2
  no-path-concat: 2
  no-proto: 2
  no-redeclare: 2
  no-regex-spaces: 2
  no-return-assign: 2
  no-script-url: 2
  no-sequences: 2
  no-shadow-restricted-names: 2
  no-shadow: 2
  no-spaced-func: 2
  no-sparse-arrays: 2
  no-sync: 2
  no-throw-literal: 2
  no-trailing-spaces: 2
  no-undef-init: 2
  no-undef: 2
  no-unreachable: 2
  no-unused-expressions: 2
  no-unused-vars: [2, {vars: all, args: after-used, ignoreRestSiblings: false}]
  no-use-before-define: [2, { functions: true, classes: true }]
  no-void: 2
  no-warning-comments: 2
  no-with: 2
  one-var: [2, never]
  operator-assignment: [2, always]
  prefer-const: [2, {destructuring: any, ignoreReadBeforeAssign: false}]
  quote-props: [2, as-needed, {keywords: false, unnecessary: false}]
  quotes: [2, single]
  radix: 2
  semi-spacing: [2, {before: false, after: true}]
  semi: [2, always]
  sort-vars: [2, {ignoreCase: true}]
  keyword-spacing: 2
  space-before-blocks: [2, always]
  space-before-function-paren: [2, {anonymous: never, named: never}]
  space-infix-ops: [2, int32Hint: false]
  space-unary-ops: [2, {words: true, nonwords: false}]
  spaced-comment: [2, always]
  use-isnan: 2
  valid-typeof: 2
  wrap-iife: 2
  yoda: [2, never, exceptRange: true]

  # WARNINGS
  max-len: [1, 120, 4, ignorePattern: "^(\\s*var\\s.+=\\s*require\\s*\\(|import )"]
  sort-imports: [1, {ignoreCase: true, ignoreMemberSort: false, memberSyntaxSortOrder: [single, multiple, all, none]}]
  sort-keys: [1, asc, {caseSensitive: false, natural: true}]

  # DISABLED
  block-scoped-var: 0
  comma-dangle: 0
  consistent-return: 0
  consistent-this: 0
  default-case: 0
  dot-notation: 0
  func-names: 0
  func-style: 0
  max-nested-callbacks: 0
  new-cap: 0
  newline-after-var: 0
  no-alert: 0
  no-console: 0
  no-control-regex: 0
  no-debugger: 0
  no-eq-null: 0
  no-inline-comments: 0
  no-labels: 0
  no-lone-blocks: 0
  no-loop-func: 0
  no-multiple-empty-lines: 0
  no-native-reassign: 0
  no-nested-ternary: 0
  no-new-func: 0
  no-process-env: 0
  no-process-exit: 0
  no-reserved-keys: 0
  no-restricted-modules: 0
  no-self-compare: 0
  no-ternary: 0
  no-undefined: 0
  no-underscore-dangle: 0
  no-var: 0
  padded-blocks: 0
  space-in-brackets: 0
  space-in-parens: 0
  strict: 0
  valid-jsdoc: 0
  vars-on-top: 0
  wrap-regex: 0
